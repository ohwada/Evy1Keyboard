<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    android:orientation="horizontal" >

<!-- keyboard -->    
	<LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
    	
<!-- upper key -->
    	<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
    		android:orientation="horizontal" >
    
        	<ImageView
            	android:id="@+id/ImageView_1_upper_c"
            	android:tag="0"
				style="@style/key_white_upper_left" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_cis"
            	android:tag="1"
				style="@style/key_black" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_d"
            	android:tag="2"
				style="@style/key_white_upper_middle" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_dis"
            	android:tag="3"
				style="@style/key_black" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_e"
            	android:tag="4"
				style="@style/key_white_upper_right" />

        	<View style="@style/key_space" />
 
         	<ImageView
            	android:id="@+id/ImageView_1_upper_f"
            	android:tag="5"
				style="@style/key_white_upper_left" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_fis"
            	android:tag="6"
				style="@style/key_black" />
 
          	<ImageView
            	android:id="@+id/ImageView_1_upper_g"
            	android:tag="7"
				style="@style/key_white_upper_middle" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_gis"
            	android:tag="8"
				style="@style/key_black" />

          	<ImageView
            	android:id="@+id/ImageView_1_upper_a"
            	android:tag="9"
				style="@style/key_white_upper_middle" />

        	<ImageView
            	android:id="@+id/ImageView_1_upper_ais"
            	android:tag="10"
				style="@style/key_black" />

          	<ImageView
            	android:id="@+id/ImageView_1_upper_b"
            	android:tag="11"
				style="@style/key_white_upper_right" />

        	<View style="@style/key_space" />
				
          	<ImageView
            	android:id="@+id/ImageView_1_upper_c2"
            	android:tag="12"
				style="@style/key_white_upper_full" />
							            
    	</LinearLayout>

<!-- lower key -->
    	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:orientation="horizontal" >

        	<ImageView
            	android:id="@+id/ImageView_1_lower_c"
            	android:tag="0"
				style="@style/key_white_lower_left" />

        	<View style="@style/key_space" />

        	<ImageView
            	android:id="@+id/ImageView_1_lower_d"
            	android:tag="2"
				style="@style/key_white_lower_middle" />

        	<View style="@style/key_space" />

        	<ImageView
            	android:id="@+id/ImageView_1_lower_e"
            	android:tag="4"
				style="@style/key_white_lower_right" />

        	<View style="@style/key_space" />

         	<ImageView
            	android:id="@+id/ImageView_1_lower_f"
            	android:tag="5"
				style="@style/key_white_lower_left" />
 
        	<View style="@style/key_space" />

          	<ImageView
            	android:id="@+id/ImageView_1_lower_g"
            	android:tag="7"
				style="@style/key_white_lower_middle" />

        	<View style="@style/key_space" />

          	<ImageView
            	android:id="@+id/ImageView_1_lower_a"
            	android:tag="9"
				style="@style/key_white_lower_middle" />

        	<View style="@style/key_space" />

          	<ImageView
            	android:id="@+id/ImageView_1_lower_b"
            	android:tag="11"
				style="@style/key_white_lower_right" />

        	<View style="@style/key_space" />
			
          	<ImageView
            	android:id="@+id/ImageView_1_lower_c2"
            	android:tag="12"
				style="@style/key_white_lower_full" />
			            
    	</LinearLayout>

	</LinearLayout>

<!-- setting -->   
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
    	android:layout_marginLeft="10dp"
		android:orientation="vertical" >

		<Button
			android:id="@+id/Button_instrument_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
				
		<Spinner
			android:id="@+id/Spinner_octave_1"
			android:prompt="@string/octave_select"
			android:entries="@array/octaves" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<CheckBox 
			android:id="@+id/CheckBox_instrument"
			android:text="@string/checkbox_instrument"  
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
			
		<CheckBox 
			android:id="@+id/CheckBox_vocal"
			android:text="@string/checkbox_vocal"  
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView 
			android:id="@+id/TextView_lylic"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="44sp" />
    								
	</LinearLayout>
		    			            
</LinearLayout>
